{
  "name": "my-electron-app",
  "version": "0.1.3",
  "description": "auto-update demo",
  "main": "main.js",
  "author": "ljy97ya",
  "license": "MIT",
  "scripts": {
    "dev": "electron .",
    "pack": "electron-builder -p never",
    "release": "electron-builder -p always"
  },
  "build": {
    "appId": "com.ljy97ya.electron",
    "productName": "my fantasy",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "assets/**",
      "node_modules/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "ljy97ya",
        "repo": "electron",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    }
  },
  "dependencies": {
    "electron-log": "^5.2.0",
    "electron-updater": "^6.3.4"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "^32.0.0",
    "electron-builder": "^24.13.3"
  }
}
